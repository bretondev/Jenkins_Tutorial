pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Install Apache on EC2 instances') {
            steps {
                script {
                    // Call WSL explicitly
                    bat '''
                        wsl ansible-playbook -i /mnt/c/path/to/your/project/inventory.ini /mnt/c/path/to/your/project/install_apache.yml
                    '''
                }
            }
        }
    }
}

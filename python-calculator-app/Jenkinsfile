pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                bat 'python -m pip install --upgrade pip'
                bat 'python -m pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'python -m unittest test_operations.py'
            }
        }

        stage('Run Application') {
            steps {
                bat 'python main.py'
            }
        }
    }

}

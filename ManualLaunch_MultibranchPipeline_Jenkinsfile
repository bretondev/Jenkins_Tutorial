pipeline {
    agent any
    stages {
        stage('Stage for the main branch') {
            when {
                branch 'origin/main'  // Deploy only on the main branch
            }
            steps {
                echo "${env.BRANCH_NAME} has been detected"
            }
        }
        stage('Stage for the dev branch') {
            when {
                branch 'origin/dev'  // Deploy only on the dev branch
            }
            steps {
                echo "${env.BRANCH_NAME} has been detected"
            }
        }
    }
}
